<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actividad1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoactividad"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="15dp"
    android:paddingRight="8dp"
    tools:context=".ActividadPlantas"
    tools:ignore="MergeRootFrame">

    <RelativeLayout
        android:id="@+id/relnuevo"
        android:layout_width="500dp"
        android:layout_height="500dp"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="70dp"
        >

        <RelativeLayout
            android:id="@+id/relAninal"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp">

            <ImageView
                android:id="@+id/p4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/p4"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/a2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/a2"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relPlanta1"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="77dp">

            <ImageView
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/a1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/p6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/p6"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relPlanta2"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="180dp"
            android:layout_marginRight="40dp">

            <ImageView
                android:id="@+id/a3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/a3"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/p5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/p5"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/p5sombra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"

            app:srcCompat="@mipmap/p5sombra"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/p4sombra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"

            app:srcCompat="@mipmap/p4sombra"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/p6sombra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"

            app:srcCompat="@mipmap/p6sombra"
            tools:ignore="ContentDescription" />
        <!---android:onClick="eventoInfo" -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/btnAtras"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@mipmap/btnhome"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/btnSonido"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@mipmap/btnaudio"
            tools:ignore="ContentDescription"
            tools:srcCompat="@mipmap/btnaudio" />

    </RelativeLayout>


</RelativeLayout>